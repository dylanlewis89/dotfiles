# Global configurations
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBeforeRepeat 0.4
config secondsBetweenRepeat 0.1
config windowHintsSpread true
# config windowHintsOrder persist

# The "hyper" key is a shortcut for CTRL + ALT + CMD
alias hyper ctrl;alt;cmd

# Abstract positions
alias full        move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf    push left bar-resize:screenSizeX/2
alias righthalf   push right bar-resize:screenSizeX/2
alias bottomhalf  push bottom bar-resize:screenSizeY/2
alias tophalf     push top bar-resize:screenSizeY/2
alias topleft     corner top-left resize:screenSizeX/2;screenSizeY/2
alias topright    corner top-right resize:screenSizeX/2;screenSizeY/2
alias bottomleft  corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2

# Grid Bindings
bind g:cmd grid padding:4 0:8,4 1:8,4

# Numpad location Bindings
bind pad1 ${bottomleft}
bind pad2 ${bottomhalf}
bind pad3 ${bottomright}
bind pad4 ${lefthalf}
bind pad5 ${full}
bind pad6 ${righthalf}
bind pad7 ${topleft}
bind pad8 ${tophalf}
bind pad9 ${topright}
bind pad+ throw next
bind pad. focus behind

# Resize Bindings
bind right:alt       resize +5% +0
bind left:alt        resize -5% +0
bind up:alt          resize +0 -5%
bind down:alt        resize +0 +5%
bind right:ctrl;alt  resize -5% +0 bottom-right
bind left:ctrl;alt   resize +5% +0 bottom-right
bind up:ctrl;alt     resize +0 +0% bottom-right
bind down:ctrl;alt   resize +0 -5% bottom-right

# Push Bindings
bind right:ctrl;cmd  ${righthalf}
bind left:ctrl;cmd   ${lefthalf}
bind up:ctrl;cmd     ${tophalf}
bind down:ctrl;cmd   ${bottomhalf}

# Nudge Bindings
bind right:shift;alt nudge +5% +0
bind left:shift;alt  nudge -5% +0
bind up:shift;alt    nudge +0 -5%
bind down:shift;alt  nudge +0 +5%

# Throw Bindings
bind right:${hyper} throw right resize
bind left:${hyper}  throw left  resize

# Focus Bindings
# bind right:cmd    focus right
# bind left:cmd     focus left
# bind up:cmd       focus up
# bind down:cmd     focus down
# bind up:cmd;alt   focus behind
# bind down:cmd;alt focus behind

# Window Hints
bind esc:cmd hint

# Better application switcher
# bind tab:cmd switch

# Reload Slate configuration file
bind r:${hyper} relaunch
