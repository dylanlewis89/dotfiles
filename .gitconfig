[user]
	name = Jonathan Lehman
	email = jonathan.lehman91@gmail.com
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[color]
	ui = true
[alias]
  ; info
  d = diff
  st = status
  l = log  --pretty=\"format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset\" --graph
  ; branching
  co = checkout
  cob = checkout -b
  com = checkout master
  br = branch
  ; committing
  ci = commit --verbose
  ca = commit --amend
  ; pulling/fetching
  fa = fetch --all
  ; pushing
  pom = push origin master
  po = push origin
  ; merging
  noff = merge --no-ff
[push]
  default = simple
[merge]
  tool = vimdiff
