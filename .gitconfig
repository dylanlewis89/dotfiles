[user]
	name = Jonathan Lehman
	email = jonathan.lehman91@gmail.com
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[color]
	ui = true
[alias]
  ; info
  d = diff
  dw = diff --word-diff
  st = status
  l = log
  lp = log --pretty=\"format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset\" --graph
  up = unpushed = log --stat origin/master..HEAD
  ; branching
  co = checkout
  cob = checkout -b
  com = checkout master
  b = branch
  bd = branch -D
  ; committing
  ci = commit --verbose
  cia = commit --verbose --amend
  ; pulling/fetching
  fa = fetch --all
  pr = pull --rebase
  prom = pull --rebase origin master
  ; pushing
  pom = push origin master
  po = push origin
  ; merging
  noff = merge --no-ff
  ; staging
  aa = add --all --intent-to-add
  ap = add -p
  ai = add -i
  ; rebasing
  ri = rebase -i
  ;misc
  g=grep --break --heading -n
[push]
  default = simple
[merge]
  tool = vimdiff
