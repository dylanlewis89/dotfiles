[user]
	name = Jonathan Lehman
	email = jonathan.lehman91@gmail.com
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[color]
	ui = true
[alias]
  ; info
  d = diff
  dw = diff --word-diff
  st = status
  l = log
  lp = log --pretty=\"format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset\" --graph
  up = log --stat origin/master..HEAD ; unpushed
  fo = log --pretty=oneline --shortstat --abbrev-commit ; file overview (optional file at end)

  ; branching
  co = checkout
  cob = checkout -b
  com = checkout master
  b = branch
  bd = branch -D

  ; committing
  ci = commit --verbose
  cia = commit --verbose --amend

  ; pulling/fetching
  fa = fetch --all
  pr = pull --rebase
  pro = pull origin --rebase
  prom = pull --rebase origin master

  ; pushing
  pom = push origin master
  po = push origin

  ; merging
  noff = merge --no-ff

  ; staging
  a = add
  aa = add --all --intent-to-add
  ap = add -p
  ai = add -i

  ; cherry-picking
  cp = cherry-pick

  ; rebasing
  ri = rebase -i

  ; stashing
  s = stash -u
  sp = stash pop
  sd = stash drop
  sl = stash list
  ssh = stash show
  ss = stash save -u
  sb = stash branch

  ;misc
  g = grep --break --heading -n ; search term at end
[push]
  default = simple
[merge]
  tool = vimdiff
[credential]
	helper = osxkeychain
